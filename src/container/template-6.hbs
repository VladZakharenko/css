<header class="header">
    <div>
        {{>logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="messages">
        <h1 class="messages_title">{{title}}</h1>
        <p class="msg_text">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}"" placeholder=" {{placeholder}}"" class="form_input" id="{{id}}"
                name="{{name}}"></input>
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}"> </input>
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button class="form_button" type="submit">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}


</main>
{{#with updates}}
<div class="advantages">
    <h1 class="updates_title">{{title}}</h1>
    {{#each list}}
    <div class="updates_cart">
        <div class="updates_box" style="background-color: {{box_color}};">{{box_text}}</div>
        <div class="upd_info">
            <p class="advan_title">@{{nickname}}</p>
            <p class="advan_text">{{description}}</p>
        </div>
    </div>
    {{/each}}

    <a href="{{show_all.url}}" class="messages_link">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}
<div class="exp">
    <h1 class="exp_title">{{title}}</h1>
    <div class="exp_block">
        {{#each list}}
        <div class="exp_card">
            <h1 class="exp_card_title">{{name}}</h1>
            <p class="exp_card_details">{{details}}</p>
        </div>
        {{/each}}
    </div>
    <div class="exp_liba">{{badge}}</div>
</div>
{{/with}}
<footer class="footer">
    <div>
        {{>logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>